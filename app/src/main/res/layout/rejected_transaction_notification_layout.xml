<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <!--
    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_transactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"/>
   -->

    <ImageView
        android:id="@+id/imageRejectedTrnsNotif"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/property_image" />


    <LinearLayout
        android:id="@+id/infoSection_NotifRejecTrns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageRejectedTrnsNotif"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtView_TimeOfRejectionTrns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/orange"
            android:text="@string/current_date_transaction"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:drawableStart="@drawable/ic_time_black_24dp"/>

        <TextView
            android:id="@+id/txtView_idTransaction_NotifRejecTrns"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginBottom="10dp"
            android:text="@string/id_transaction"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/DescriptionSection_NotifRejecTrns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/infoSection_NotifRejecTrns"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtView_DescriptionOfRejectionTrns"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:background="@color/red"
            android:text="@string/description_of_rejection_transaction"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>


</RelativeLayout>
